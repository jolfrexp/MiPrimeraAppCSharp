@model MiPrimeraApp.Models.Producto
<h2>Crear Producto</h2>

<form asp-action="Crear" method="post">
    <div class="form-group">
        <label asp-for="Nombre">Nombre</label>
        <input asp-for="Nombre" class="form-control">
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Precio">Precio</label>
        <input asp-for="Precio" class="form-control">
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoriaId">Categoria</label>
        <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.Categorias"><option value="">--Seleccione una categor√≠a --</option></select>
        <span asp-validation-for="CategoriaId" class="text-danger"></span>
    </div>
    <div asp-validation-summary="All" class="text-danger">
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}